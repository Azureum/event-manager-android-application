<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".ShareActivityMainActivity"
    android:gravity="center"
    android:background="#f6546a"
    android:weightSum="1">

    <TextView
        android:text="Created By - Rachit Shridhar"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/shareit"
        android:layout_alignEnd="@+id/shareit"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginTop="74dp"
        android:id="@+id/textView4"
        android:layout_width="1000dp"
        android:textSize="36sp"
        android:layout_height="1000dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Share App"
        android:textSize="20sp"
        android:onClick="shareIt"
        android:drawableRight="@drawable/share"
        android:id="@+id/shareit"
        android:textColor="#ffffff"
        android:background="#20b2aa"
        android:typeface="serif"
        android:layout_marginLeft="67dp"
        android:layout_marginStart="67dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="47dp" />


</RelativeLayout>